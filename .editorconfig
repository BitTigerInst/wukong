# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# set to true to remove any whitespace characters preceding newline characters and false to ensure it doesn't.
[*]
trim_trailing_whitespace = true

# tab indentation, tab_width defaults to the value of indent_size and doesn't usually need to be specified.
[*]
indent_style = tab
tab_width = 2
